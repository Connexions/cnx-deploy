<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<!-- It's suggested that KeepAlive and RunAtLoad not be used according to
     http://apple.stackexchange.com/a/159537/121083
-->
<dict>
  <!-- <key>KeepAlive</key> -->
  <!-- <true/> -->
  <key>Label</key>
  <string>homebrew.mxcl.postgresql-{{ postgres_version }}</string>
  <key>ProgramArguments</key>
  <array>
    <string>/usr/local/opt/postgresql-{{ postgres_version }}/bin/postgres</string>
    <string>-D</string>
    <string>/usr/local/var/postgres-{{ postgres_version }}</string>
    <string>-r</string>
    <string>/usr/local/var/postgres-{{ postgres_version }}/server.log</string>
  </array>
  <!-- <key>RunAtLoad</key> -->
  <!-- <true/> -->
  <key>WorkingDirectory</key>
  <string>/usr/local</string>
  <key>StandardErrorPath</key>
  <string>/usr/local/var/postgres-{{ postgres_version }}/server.log</string>
</dict>
</plist>
